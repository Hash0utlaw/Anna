# Instagram API Credentials
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_ACCESS_TOKEN=your_long_lived_access_token_here

# Instagram Business Account ID
INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id_here

# Facebook Graph API Version (update as needed)
FACEBOOK_API_VERSION=v18.0

# Database Connection (if you're using one)
DATABASE_URL=your_database_connection_string_here

# API Keys for other services (if applicable)
# CLOUDINARY_URL=your_cloudinary_url_here
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (if you're using JSON Web Tokens)
# JWT_SECRET=your_jwt_secret_here

# Hashtag Fetcher Rate Limit (requests per hour)
HASHTAG_FETCHER_RATE_LIMIT=30

# Error Reporting Service (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Feature Flags (for controlling feature availability)
ENABLE_INSTAGRAM_POSTING=true
ENABLE_METRICS_ANALYSIS=true
ENABLE_HASHTAG_FETCHER=true

# Add any other environment-specific variables below